<%- include('../includes/head.ejs') %>
</head>
<body>

<%- include('../includes/navigation.ejs') %>  

    <main>
      <form class="product-form" action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
        <div class="form-control">
          <label for="productName">Product Name</label>
          <input type="text"
            placeholder="Add product name"
            name="productName"
            id="productName"
            value="<% if(editing) { %> <%=product.productName%> <% } %>"
          />
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input type="number"
            placeholder="Add product price"
            name="price"
            id="price"
            step="0.01"
            value="<% if(editing) { %><%=product.price%><% } %>"
              /> 
        </div>
        <div class="form-control">
          <label for="imageUrl">Image</label>
          <input type="text"
            placeholder="Add product image"
            name="imageUrl"
            id="imageUrl"
            value="<% if(editing) { %><%=product.imageUrl%><% } %>"
          />
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea id="description" name="description" rows="5"><% if(editing) { %> <%=product.description%> <% } %></textarea>
        </div>
     <% if(editing) {%>
     <input type="hidden" value="<%=product._id%>" name="productId" >
     <% } %>
        <button type="submit"><% if(editing) { %> Update Product <% }  else { %> Add Product <% } %></button>
      </form>
    </main>

<%- include('../includes/end.ejs') %>
